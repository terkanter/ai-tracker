ARG NODE_IMAGE=node:20

FROM ${NODE_IMAGE} AS base

RUN apt-get update && apt-get install -y \
    procps \
    python3 \
    python3-pip \
    make \
    g++ \
    git \
    && rm -rf /var/lib/apt/lists/*

RUN npm install -g pnpm@9.12.2

FROM base AS development
WORKDIR /app

# Set environment variables for native builds
ENV PYTHON=/usr/bin/python3
ENV NODE_GYP_FORCE_PYTHON=/usr/bin/python3

COPY package*.json pnpm-lock.yaml ./

# Install with fallback options for native modules
RUN pnpm install --unsafe-perm || pnpm install --no-optional
